        <div class="content-wrapper">
            <div class="content-body">
                <div class="card taple-users">
                    <div class="card-header" style="display: inline-table;">
                        <form class="row g-3 add-doctor-form" style="justify-content: center;" method="POST">
                            <div class="col-auto">
                                <label for="staticEmail2" class="visually-hidden">Name</label>
                                <input type="text" class="form-control" id="staticEmail2" name="name">
                            </div>
                            <div class="col-auto">
                                <label for="email" class="visually-hidden">Email</label>
                                <input type="email" class="form-control" id="inputPassword2" placeholder="Email" name="email">
                            </div>
                            <div class="col-auto">
                                <label for="phone" class="visually-hidden">Phone</label>
                                <input type="tel" class="form-control" id="Phone" placeholder="Phone" name="phone">
                            </div>
                            <div class="col-auto">
                                <label for="Specialization" class="visually-hidden">Specialization</label>
                                <input type="text" class="form-control" id="Specialization" placeholder="Specialization" name="spec">
                            </div>

                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-content">
                        <div class="card-body card-dashboard">
                            <div class="title">
                                <h3>Doctors</h3>
                            </div>
                            <div class="table-responsive">
                                <div id="DataTables_Table_4_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                    <table class="table table-striped dataex-html5-selectors dataTable" id="DataTables_Table_4" role="grid" aria-describedby="DataTables_Table_4_info">
                                        <thead>
                                            <tr role="row" class="head" style="height: 5vh">
                                                <th class="" tabindex="0" aria-controls="DataTables_Table_4" rowspan="1" colspan="1" aria-sort="" aria-label="">id</th>
                                                <th class="" tabindex="0" aria-controls="DataTables_Table_4" rowspan="1" colspan="1" aria-label="">User Name </th>
                                                <th class="" tabindex="0" aria-controls="DataTables_Table_4" rowspan="1" colspan="1" aria-label="">Email</th>
                                                <th class="" tabindex="0" aria-controls="DataTables_Table_4" rowspan="1" colspan="1" aria-label="">Mobile Number</th>
                                                <th class="" tabindex="0" aria-controls="DataTables_Table_4" rowspan="1" colspan="1" aria-label="">Specialization</th>
                                                <th class="" tabindex="0" aria-controls="DataTables_Table_4" rowspan="1" colspan="1" aria-label="">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% doctorsList.forEach((doctor)=>{%>

                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">
                                                        <%= doctor._id %>
                                                    </td>
                                                    <td>
                                                        <a href="/doctors/<%=doctor._id %>"><%= doctor.Firstname %></a>
                                                    </td>
                                                    <td>
                                                        <%= doctor.Email %>
                                                    </td>
                                                    <td>
                                                        <%= doctor.MobileNumber %>
                                                    </td>
                                                    <td>
                                                        <%= doctor.Specialization %>
                                                    </td>
                                                    <td>
                                                        <form method="GET" action="/doctors/deleteDoctor">
                                                            <input name="id" value="<%= doctor._id %>" hidden>
                                                            <button class="btn btn-primary" type="submit">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
